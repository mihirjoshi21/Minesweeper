<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:typeface="sans" />

        <TextView
            android:id="@+id/textview_disclaimer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\n\nDisclaimer"
            android:textStyle="bold"
            android:typeface="sans" />

        <TextView
            android:id="@+id/textview_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mihir Joshi (B00773778) accepts no liability for the content of this app, or for the consequences of any actions taken on the basis of the app and its content"
            android:typeface="sans" />
    </LinearLayout>

</ScrollView>